@model Advertisement
<div  class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3" style="background-color:white;">
    <div class="col-md-2">
        <a asp-controller="Advertisement" asp-action="Details" asp-route-id="@Model.AdvertisementId"><img src="/@Model.Image" alt="Image" class="img-fluid"></a>
    </div>
    <div class="col-md-4">
        <span class="badge badge-primary px-2 py-1 mb-3">@Model.calismasekli</span>
        <h2><a asp-controller="Advertisement" asp-action="Details" asp-route-id="@Model.AdvertisementId">@Model.ilanName</a> </h2>
        <p class="meta">Yetkili: <strong>Uğur Karakaş</strong></p>
    </div>
    <div class="col-md-3 text-left">
        <h3>@Model.sehir</h3>
        <span class="meta">@Model.ulke</span>
    </div>
    <div class="col-md-3 text-md-right">
        <ul style="list-style-type: none; padding-left: 0;">
            <li>
                <strong class="text-black">@Model.baslangicmaas₺ &mdash; @Model.bitismaas₺</strong>
            </li>
            <li>
                <span class="badge badge-primary px-2" style="background-color:red">Ortalama Maaş Miktarı</span>
            </li>
        </ul>
    </div>
</div>